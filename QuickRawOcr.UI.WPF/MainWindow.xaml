<Window x:Class="QuickRawOcr.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickRawOcr.UI.WPF"
        mc:Ignorable="d"
        Title="QuickRawOcr" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel x:Name="Menu">
                    <Button x:Name="btnImport" Content="Import" Height="33" Width="150" 
                    Margin ="20 8 0 0" HorizontalAlignment="Left"
                    FontSize="20" FontWeight="Bold" Click="btnImport_Click" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Rectangle Stroke="Blue" StrokeThickness="1" Fill="LightGray" />
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="Form">
                            <StackPanel Orientation="Horizontal" Width="Auto" Height="Auto" MinHeight="35">
                                <Label x:Name="lblFullText" Margin="5 0 5 0" Content="Full Text" FontSize="20" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Width="Auto" Height="Auto" MinHeight="35">
                                <TextBox x:Name="txtFullText" FontSize="20" VerticalAlignment="Center" Background="White" 
                                         Margin="10 0 0 0" Width="Auto" Height="Auto" MinWidth="150"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Blue"/>

                <Grid Grid.Column="2" Background="LightGray">
                    <Border BorderBrush="Blue" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="ImagePanel" Margin="10" />
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
